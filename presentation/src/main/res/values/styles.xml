<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Drawer -->
    <style name="Drawer.TextView" parent="">
        <item name="android:paddingTop">@dimen/tv_drawer_padding_top</item>
        <item name="android:paddingBottom">@dimen/tv_drawer_padding_bottom</item>
        <item name="android:gravity">start|center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/dark_gray_tundora</item>
        <item name="android:textSize">@dimen/tv_drawer_text_size</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/tv_drawer_drawable_padding</item>
    </style>

    <style name="Drawer.TextView.Name" parent="">
        <item name="android:textSize">@dimen/tv_drawer_name_text_size</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/dark_gray_tundora</item>
    </style>

    <!-- Dialog -->
    <style name="Dialog.TextView.Title" parent="">
        <item name="android:paddingBottom">@dimen/tv_dialog_padding_bottom</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/tv_dialog_title_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Dialog.TextView.Description" parent="">
        <item name="android:paddingBottom">@dimen/tv_dialog_padding_bottom</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/tv_dialog_description_text_size</item>
        <item name="android:textColor">@color/black_54pc</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="Dialog.TextView.Action" parent="">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/tv_dialog_action_text_size</item>
        <item name="android:textColor">@color/orange_vermilion</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Text Input Layout-->
    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="passwordToggleDrawable">@drawable/password_toggle</item>
        <item name="hintTextAppearance">@style/Text.Caption</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
    </style>

    <!-- TextView Normal -->
    <style name="TextView.Normal" parent="">
        <item name="android:paddingEnd">@dimen/tv_bold_padding_end</item>
        <item name="android:paddingStart">@dimen/tv_bold_padding_start</item>
        <item name="android:paddingTop">@dimen/tv_bold_padding_top</item>
        <item name="android:paddingBottom">@dimen/tv_bold_padding_bottom</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/dark_gray_tundora</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="GreenMaterialButton">
        <item name="backgroundTint">@color/green_fruit_salad</item>
        <item name="cornerRadius">31dp</item>
        <item name="android:lines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/button_colored_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/green_fruit_salad</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

</resources>
